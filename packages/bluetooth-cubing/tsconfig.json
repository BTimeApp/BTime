{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "emitDeclarationOnly": false,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "strict": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "noEmit": false
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
  }