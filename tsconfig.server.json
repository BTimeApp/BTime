{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "noEmit": false,
      "target": "es2019",
      "module": "commonjs",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["src/**/*.ts"]
  }
  